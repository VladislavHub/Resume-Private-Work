<div class="row" style="background: #008080;">

    <div class="card" style="background:#003333;">
        <div class="card-body nav">
            {{#each navigation.links}}
            <div class="nav-item ms-3">
                <a href="{{href}}" class="nav-link" style="color: #e6b1b1;">{{text}}</a>
            </div>
            {{/each}}
            <a href="#" class="col-12 text-end" style="color: #e6b1b1;"><i class="bi bi-box-arrow-in-right"
                    style="color: #e6b1b1;"></i> Log
                in</a>
        </div>
    </div>

    <div class="mt-5 ms-5 mb-3">
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            <li class="breadcrumb-item">
                <a href="{{url}}" style="color: #e6b1b1;">{{name}}</a>
            </li>
            {{/each}}
        </ol>
    </div>


    <div class="mb-5">
        <hr>
    </div>


    {{!-- Left block --}}
    <div class="col-2 ms-5 mt-4" style="background: #004c4c;">


        <div class="mt-2 mb-4">
            <h1>{{header}}</h1>
        </div>

        <div class="card" style="background: #003f3f;">
            <div class="card-body">
                {{#with filterBlock}}
                {{#with sellers}}
                <div>
                    <div class="form-label">{{title}}</div>

                    <div class="form-check">
                        <label class="form-check-label">{{list.[0].value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{list.[1].value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                </div>
                {{/with}}

                <hr>
                {{#with brands}}
                <div>
                    <label class="form-label">{{title}}</label>
                    <input placeholder="{{input.placeholder}}" class="form-control" style="background: #b2d8d8;">
                </div>

                <div class="mt-3">

                    {{#each options}}
                    <div class="form-check">
                        <vabel class="form-check-label">{{value}}</vabel>
                        <input class="form-check-input" type="checkbox">
                    </div>
                    {{/each}}
                </div>
                {{/with}}

                <hr>

                {{#with price}}
                <div>
                    <label class="form-label">{{title}}</label>
                    <input class="form-control" placeholder="{{range.from}}" style="background: #b2d8d8;">
                </div>

                <div class="mt-2">
                    <input class="form-control" placeholder="{{range.to}}" style="background: #b2d8d8;">
                </div>

                <div class="mt-3">
                    <a href="{{button.link}}" class="btn btn-outline-secondary">{{button.text}}</a>
                </div>
                {{/with}}

                <hr>

                {{#each filterList}}
                <label class="form-label">{{title}}</label>
                <div class="form-check">
                    {{#each options}}
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">{{value}}</label>
                    {{/each}}
                </div>
                <hr>
                {{/each}}
                {{/with}}
            </div>
        </div>
    </div>

    <div class="col-8">
        <div class="row">

            {{#with sortBlock.[0]}}
            <div class="col-3 mb-4 ms-5">
                <label clas="form-label">{{label}}</label>
                <select class="form-select" style="background: #7fbfbf;">
                    <option selected>{{placeholder}}</option>

                    {{#each options}}
                    <option value="{{value}}">
                        {{text}}</option>
                    {{/each}}

                </select>
            </div>
            {{/with}}

            {{#with sortBlock.[1]}}
            <div class="col-3 mb-4">
                <label clas="form-label">{{label}}</label>
                <select class="form-select" style="background: #7fbfbf;">
                    <option selected>{{placeholder}}</option>

                    {{#each options}}
                    <option value="{{value}}">
                        {{text}}</option>
                    {{/each}}

                </select>
            </div>
            {{/with}}

            {{#with sortBlock.[2]}}
            <div class="col-3 mb-4">
                <label clas="form-label">{{label}}</label>
                <select class="form-select" style="background: #7fbfbf;">
                    <option selected>{{placeholder}}</option>

                    {{#each options}}
                    <option value="{{value}}">
                        {{text}}</option>
                    {{/each}}

                </select>
            </div>
            {{/with}}

        </div>

        <div class="row">

            {{#each goodsList}}
            {{> catalogltem}}
            {{/each}}
        </div>
    </div>




    <div class="col-4 mt-5">
        {{!-- Left Block --}}

    </div>



    <div class="col-8 mt-5">
        {{!-- Right Block --}}



    </div>

    {{#with service}}
    <div class="card mt-5"
        style="background: radial-gradient(circle, rgba(0,51,51,1) 28%, rgba(0,76,76,1) 81%, rgba(0,128,128,1) 100%);">
        <div class="card-body">
            <h2 class="text-center">{{title}}</h2>
            <p class="text-center">{{description}}</p>

            <div class="text-center">
                {{#each buttons}}
                <a href="{{link}}" class="btn btn-primary text-center">{{text}}</a>
                {{/each}}

            </div>
        </div>
    </div>
    {{/with}}

    <hr class="my-5">


    <footer>

        <div class="row">
            {{#each footer.[0]}}
            <div class="col-3 px-1">
                <form action="{{link}}" target="_blank">
                    <button class="btn btn-link text-dark">{{text}}</button>
                </form>
            </div>
            {{/each}}
        </div>

        <div class="row">
            {{#each footer.[1]}}
            <div class="col-3 px-1">
                <form action="{{link}}" target="_blank">
                    <button class="btn btn-outline-link text-dark">{{text}}</button>
                </form>
            </div>
            {{/each}}
        </div>

        <div class="row">
            {{#each footer.[2]}}
            <div class="col-3 px-1">
                <form action="{{link}}" target="_blank">
                    <button class="btn btn-link text-dark">{{text}}</button>
                </form>
            </div>
            {{/each}}
        </div>

        <div class="row">
            {{#each footer.[3]}}
            <div class="col-3 px-1">
                <form action="{{link}}" target="_blank">
                    <button class="btn btn-link text-dark">{{text}}</button>
                </form>
            </div>
            {{/each}}
        </div>

        <div class="row">
            {{#each footer.[4]}}
            <div class="col-3 px-1">
                <form action="{{link}}" target="_blank">
                    <button class="btn btn-link disabled text-dark">{{text}}</button>
                </form>
            </div>
            {{/each}}
        </div>

    </footer>






















</div>